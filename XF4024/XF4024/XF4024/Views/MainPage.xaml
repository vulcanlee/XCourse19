<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF4024.Views.MainPage"
             xmlns:local="clr-namespace:XF4024.AttachedBehaviors"
             Title="使用附加行為的定義行為">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center"
                 Margin="40">
        <Label 
            Text="帳號與密碼，不足6個字元，會顯示出紅色文字，反之會出現預設文字"
            XAlign="Center"
            VerticalOptions="Center" HorizontalOptions="Center" />

        <Label 
            Text="請登入系統"
            VerticalOptions="Center" HorizontalOptions="Center" />

        <!--在這裡，透過了 Attached Behavior ，就可以任您的控制項，擁有不同的行為表現-->
        <!--要使用這個 Attached Behavior，需要定義一個新命名空間，透過這個新命名空間，才能夠參考到這個新的 Attached Behavior-->
        <Entry
            Placeholder="請輸入帳號"
            local:EmptyHighlightBehavior.EmptyHighlight="True"
            />

        <Entry
            Placeholder="請輸入密碼"
            IsPassword="True"
            local:EmptyHighlightBehavior.EmptyHighlight="True"
            />
    </StackLayout>
</ContentPage>